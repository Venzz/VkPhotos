<UserControl
    x:Class="VkPhotos.View.Controls.MapCluster"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

    xmlns:Controls="using:VkPhotos.View.Controls"
    
    Width="64"
    Height="64">

    <Grid x:Name="LayoutControl" RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <CompositeTransform/>
        </Grid.RenderTransform>
        <Ellipse Fill="{StaticResource AppAccentBrush}"/>
        <TextBlock
            x:Name="AmountControl"
            FontSize="19"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            TextLineBounds="Tight"
            FontWeight="Bold"
            Foreground="White">
        </TextBlock>
    </Grid>
</UserControl>
