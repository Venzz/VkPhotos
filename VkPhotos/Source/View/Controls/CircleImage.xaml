<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="using:VkPhotos.View.Controls">

    <Style TargetType="Controls:CircleImage">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Controls:CircleImage">
                    <Grid x:Name="LayoutControl">
                        <Ellipse>
                            <Ellipse.Fill>
                                <ImageBrush x:Name="ImageControl"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>