<UserControl
    x:Class="VkPhotos.View.Controls.ProgressIndicator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="24">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Rectangle Grid.RowSpan="2" Fill="{ThemeResource ApplicationPageBackgroundThemeBrush}" Opacity="0.65"/>
        <ProgressBar
            x:Name="ProgressControl"
            Margin="12,0"
            Value="0"
            Maximum="100">
        </ProgressBar>
        <TextBlock
            x:Name="MessageControl"
            Grid.Row="1"
            Margin="12,0"
            FontSize="12">
        </TextBlock>
    </Grid>
</UserControl>
